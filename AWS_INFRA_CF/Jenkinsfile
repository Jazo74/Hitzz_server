pipeline {
    
    agent any

    parameters {
        string(defaultValue: "cc_eu_central_1", description: "AWS profile", name: "awsProfile")
    }
    
    stages {
        stage("building_aws_infra") {
            steps {
                sh "aws cloudformation create-stack --stack-name webhitzz_infra --template-body file:///var/jenkins_home/workspace/Webhitzz_infra/AWS_INFRA_CF/soloEC2wSSMwUb2004.yaml --capabilities CAPABILITY_NAMED_IAM}"
            }
        }
    }
}
